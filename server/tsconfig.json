{
  "compilerOptions": {
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types"],
    "target": "es2016",
    "module": "commonjs", 
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
